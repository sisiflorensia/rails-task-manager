<%= form_for(@task) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :details %>
    <%= f.text_field :details, class: 'form-control' %>
  </div>

  <div class="form-check">
    <%= f.check_box :completed, class: 'form-check-input' %>
    <%= f.label "Mark as completed" %>
    <!-- <input type="checkbox" class="form-check-input" name="completed" value="true"> -->
    <!-- <label class="form-check-label" for="completed">Mark as completed</label> -->
  </div>

  <div class="button-container my-5">
    <%= link_to "Cancel", tasks_path, class: "btn btn-outline-secondary w-25 py-2 mr-3" %>
    <%= f.submit class: 'btn btn-primary w-25 py-2 mr-3' %>
  </div>
<% end %>

